<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCommentActivity">

    <TextView
        android:id="@+id/textView2UCA"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Edite seu comentário ou delete-o. "
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUCA" />

    <TextView
        android:id="@+id/textViewUCA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:text="Meu comentário"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutUCA"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextUCA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentário" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button2UCA"
        android:layout_width="162dp"
        android:layout_height="59dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        android:text="Deletar"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUCA" />

    <Button
        android:id="@+id/buttonUCA"
        android:layout_width="162dp"
        android:layout_height="70dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="188dp"
        android:text="Salvar edição"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutUCA" />
</androidx.constraintlayout.widget.ConstraintLayout>